{
  "extends": ["eslint:recommended", "google"],
  "rules": {
    "max-len": [1, 140, 4],

    // These rules are not compatible with Prettier.
    "indent": 0,
    "operator-linebreak": 0,
    "space-before-function-paren": 0,
	"no-tabs": 0,
	"quotes": "off"
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },

  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jasmine": true
  }
}
